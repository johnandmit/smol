#include <math.h>
#include <stdio.h>
int main()
{
int n;
int a=1,c=1,e;
printf("nhap n: ");
scanf("%i",&n);
for(;a<=n;a++){

    for(;c<=a;){
    printf("%i",c);
    c++;
    }
    printf("\n");
    c=1;
  }
  for(int b=n,a=1,e=1;a<n;a++){
    b--;
    
    for(c=0,e=1;e<=b;e++){
      c++;
      printf("%i",c);
      if(e==b)
      printf("\n");
    }
  }
}
