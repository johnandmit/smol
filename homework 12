#include <math.h>
#include <stdio.h>
int main()
{
  float a,smallest,largest,average,sum=1,timeAisEnter=1.0;
  printf("nhap so thuc a: ");
    scanf("%f",&a);
  smallest=a;
  do{
    printf("nhap so thuc a: ");
    scanf("%f",&a);
    if(a==0) break;
    timeAisEnter++;
    sum=sum+a;
    if(smallest>a)
    smallest=a;
    if(largest<a)
    largest=a;
    
  }while(a!=0);
  printf("largest=%f\n",largest);
  printf("smallest=%f\n",smallest);
  average=sum/timeAisEnter;
  printf("average=%f\n",average);
}
