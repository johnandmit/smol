#include <math.h>
#include <stdio.h>
int main(){
  int A[]={1,-3,4,-6,2,5,6,-2,-9,7};

  for(int i=0;i<10;i++){
    printf("%i ",A[i]);
  }
  printf("\n");

  int k = 10;
  while (k>1) {
    int indexMax=0;
    for(int i=0;i<k;i++)
      if(A[i]>A[indexMax]) indexMax=i;  
    int temp=A[k-1];
    A[k-1]=A[indexMax];
    A[indexMax]=temp;
    k--;
    }
    for(int i=0;i<10;i++){
      printf("%i ",A[i]);
  }
  printf("\n");
  for(int i=9;i>=0;i--){
      printf("%i ",A[i]);}
    printf("\n");
  for(int i=0;i<10;i++){
    A[i]=sqrt(pow(A[i],2));
  }
  k = 10;
  while (k>1) {
    int indexMax=0;
    for(int i=0;i<k;i++)
      if(A[i]>A[indexMax]) indexMax=i;  
    int temp=A[k-1];
    A[k-1]=A[indexMax];
    A[indexMax]=temp;
    k--;
    }
  for(int i=0;i<10;i++){
      printf("%i ",A[i]);}
}
